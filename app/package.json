{
  "name": "fog",
  "productName": "Fog",
  "bundleId": "com.vitorgalvao.fog",
  "version": "1.1.0",
  "description": "An electron app for overcast.fm",
  "main": "main.js",
  "scripts": {
    "get-electron-version": "grep 'electron-prebuilt' package.json | perl -pe 's/.*(\\d+\\.\\d+\\.\\d+).*/\\1/'",
    "start": "electron main.js",
    "build": "npm run build-macos",
    "build-macos": "electron_version=$(npm run get-electron-version | tail -1) && electron-packager . $npm_package_productName --overwrite --prune --platform=darwin --arch=x64 --version=${electron_version} --app-bundle-id=$npm_package_bundleId --app-version=$npm_package_version --icon=../icon/icon.icns",
    "package": "npm run package-macos",
    "package-macos": "npm run build-macos && ditto -ck --norsrc --keepParent 'Fog-darwin-x64/Fog.app' \"${HOME}/Desktop/Fog-macos-$npm_package_version.zip\" && rm -r 'Fog-darwin-x64'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vitorgalvao/fog.git"
  },
  "keywords": [
    "electron",
    "overcast",
    "overcast.fm",
    "podcasts"
  ],
  "author": "Vítor Galvão",
  "license": "Unlicense",
  "bugs": {
    "url": "https://github.com/vitorgalvao/fog/issues"
  },
  "homepage": "https://github.com/vitorgalvao/fog",
  "devDependencies": {
    "electron-packager": "^7.0.1",
    "electron-prebuilt": "^1.0.1"
  },
  "dependencies": {
    "electron-window-state": "^3.0.2",
    "mousetrap": "^1.5.3",
    "sweetalert": "^1.1.3"
  }
}
